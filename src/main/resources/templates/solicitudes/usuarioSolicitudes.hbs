{{#partial "contenido" }}
    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerUbicacion">
            <h3 class="textoIngreso">Solicitudes</h3>
        </div>
    </div>
<div class="d-flex flex-column" id="content-wrap">
    <div class=" d-flex align-self-center conteinerRegistro">
        <main>
            <form class="was-validated" novalidate method="POST" action="/solicitudes">
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <label name="tramoCompartido" class="form-label texto" style="font-size: 24px !important; padding:0px !important;" id="nombreDelTramo">Tramo Compartido</label>
                    <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                        <div class="col-md-6">
                            <label for="trayectos" class="form-label textoInputs">Mis Trayectos</label>
                            <select name="idTrayecto" class="form-select form-select-custom" id="trayectos" required>
                                <option selected disabled value="">-- Elegir Trayecto --</option>
                                {{#each trayectos}}
                                <option value="{{id}}">{{descripcion}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="trayectos" class="form-label textoInputs">Tramos Compartidos</label>
                            <select name="idTramo" class="form-select form-select-custom" id="tramos" required>
                                <option selected disabled value="">-- Elegir Tramo --</option>
                                {{#each tramos}}
                                <option value="{{id}}">Tramo {{id}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center" style="margin: 20px 0px 20px 0px;">
                    <button class=" btn-custom " type="submit" id="idAniadir">Aceptar</button>
                </div>
            </form>
        </main>
        </div>
    </div>

{{/partial}}
