        </div>
    </div>
<div class="d-flex flex-column" id="content-wrap">
    <div class=" d-flex align-self-center conteinerRegistro">
        <main>

                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <ul class="list-group" id="boxTrayectos">
                        <label name="trayecto" class="form-label texto" style="font-size: 24px !important; padding:0px !important;"
                                id="nombreDelTrayecto"> Trayecto {{idTrayecto}}</label>
                            {{#each tramos}}
                            <form class="was-validated" novalidate method="POST" action="/trayectos/{{idTrayecto}}/tramos/{{id}}/delete" onsubmit="return confirm('EstÃ¡ seguro que desea borrar este tramo?')">
                        <li class="list-group-item d-flex justify-content-between align-items-start align-middle texto">
                            <div class="ms-2 me-auto">
                                <div class="listStyle" href="/trayectos/{{idTrayecto}}/tramos/{{id}}">Tramo {{id}}</div>
                            </div>
                            <a class="material-symbols-outlined edit" href="/trayectos/{{idTrayecto}}/tramos/{{id}}/compartir-tramo">person_add</a>
                            <button class="material-symbols-outlined delete btn-nohover"  type="submit">delete</button>
                        </li>
                            </form>
                        {{/each}}
                    </ul>
                    <div class="d-flex justify-content-center">
                        <a class="material-symbols-outlined " style="margin-top:20px; cursor: pointer;"
                            href="/trayectos/{{idTrayecto}}/tramos/new">add_circle</a>
                    </div>
                </div>

