{{#partial "contenido" }}
    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerUbicacion">
            <h3 class="textoIngreso" style="margin: 10px 10px">Calcular HC</h3>
        </div>
    </div>

    <div class="d-flex flex-column" id="content-wrap">
        <div class="d-flex align-self-center conteinerIngreso">
            <main>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div class="d-flex justify-content-around">
                        <h3 class="textoIngreso">¡Hola! Tu huella de <br>carbono generada fue la siguiente</h3>
                    </div>
                </div>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div name="hCMiembro" class="col-md-12">
                        <h3  class="textoIngreso " style="text-align: center;">{{hc}} 𝒌𝒈𝑪𝑶𝟐𝒆𝒒</h3>

                    </div>
                </div>
                {{#each porcentajes }}
                    <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                        <div name="organizacion" class="col-md-9">
                            <h3 class="listStyle">{{ organizacion.razonSocial }}</h3>
                        </div>
                        <div name="HC" class="col-md-3">
                            <h3 class="listStyle">{{porcentalje}}%</h3>
                        </div>
                    </div>
                {{/each}}
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div class="d-flex justify-content-center">
                        <form method="POST" action="/calcularhc">
                            <button class="btn btn-custom" style="margin: 10px 0px 0px 0px;"  type="submit" >Calcular HC</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>

{{/partial}}
{{> base.hbs }}