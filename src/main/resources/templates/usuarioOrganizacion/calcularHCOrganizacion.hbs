{{#partial "contenido" }}
    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerUbicacion">
            <h3 class="textoIngreso" >Calcular HC</h3>
        </div>
    </div>

    <div class="d-flex flex-column" id="content-wrap">
        <div class="d-flex align-self-center conteinerIngreso">
            <main>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div class="d-flex justify-content-around">
                        <h3 class="textoIngreso">¡Hola! La huella de <br>carbono generada fue la siguiente</h3>
                    </div>
                </div>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div name="hCOrganizacion" class="col-md-12">
                        <span class="listStyle">{{hc}} 𝒌𝒈𝑪𝑶𝟐𝒆𝒒</span>

                    </div>
                </div>
                {{#each areashc }}
                    <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                        <div name="area" class="col-md-9">
                            <span class="listStyle">{{ area.nombre }}</span>
                        </div>
                        <div name="HC" class="col-md-3">
                            <span class="listStyle">{{hc}}𝒌𝒈𝑪𝑶𝟐𝒆𝒒</span>
                        </div>
                    </div>
                {{/each}}
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">
                    <div class="d-flex justify-content-center">
                        <form method="POST" action="/calcularHCOrg">
                            <button class="btn btn-custom" style="margin: 10px 0px 0px 0px;"  type="submit" >Calcular HC</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>

{{/partial}}
